pragma solidity ^0.8.13;

abstract contract Owner {
    /*//////////////////////////////////////////////////////////////
                                 STORAGE
    //////////////////////////////////////////////////////////////*/
    address public owner;

    /*//////////////////////////////////////////////////////////////
                                 CONSTRUCTOR
    //////////////////////////////////////////////////////////////*/

    constructor() {
        owner = msg.sender;
    }

    /*//////////////////////////////////////////////////////////////
                                  MODIFIER
    //////////////////////////////////////////////////////////////*/

    modifier onlyOwner() virtual {
        require(msg.sender == owner, "UNAUTHORIZED OWNER");
        _;
    }
}
